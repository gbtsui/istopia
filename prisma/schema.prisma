model User {
  id           String    @id @default(uuid())
  name         String    @unique @db.VarChar(255)
  display_name String    @db.VarChar(255)
  email        String    @unique @db.VarChar(255)
  created_at   DateTime  @default(now())
  summary_text String?   @db.VarChar(255)
  about_me     String?   @db.VarChar(1023)
  password     String
  pieces       Piece[]
  comments     Comment[]
}

model Piece {
  id           String    @id @default(uuid()) //TODO: migrate
  author_id    String
  author       User      @relation(fields: [author_id], references: [id])
  title        String    @db.VarChar(1023)
  slug         String
  summary      String    @db.VarChar(2057)
  published    Boolean
  rating       Float?
  views        Int
  created_at   DateTime  @default(now())
  last_updated DateTime  @default(now())
  content      Json
  comments     Comment[]

  @@unique([author_id, slug])
}

model Comment {
  id        String @id @default(uuid())
  piece     Piece  @relation(fields: [piece_id], references: [id])
  piece_id  String
  author    User   @relation(fields: [author_id], references: [id])
  author_id String
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
